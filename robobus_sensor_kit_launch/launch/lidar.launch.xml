<launch>
  <arg name="launch_driver" default="true"/>
  <arg name="use_concat_filter" default="true"/>
  <arg name="vehicle_id" default="$(env VEHICLE_ID default)"/>
  <arg name="vehicle_mirror_param_file" default="$(find-pkg-share sample_vehicle_description)/config/mirror.param.yaml"/>
  <arg name="use_pointcloud_container" default="false" description="launch pointcloud container"/>
  <arg name="pointcloud_container_name" default="pointcloud_container"/>

  
  <group>
    <push-ros-namespace namespace="lidar"/>
    <!-- use front left ouster lidar -->
    <group>
      <push-ros-namespace namespace="front_left"/>
      <include file="$(find-pkg-share robobus_sensor_kit_launch)/launch/ouster_fl_launch.py" />
    </group>
    <node pkg="topic_tools" exec="relay" name="lidar_relay_fl" output="log">
      <param name="input_topic" value="/sensing/lidar/front_left/ouster/front_left/points"/>
      <param name="output_topic" value="/sensing/lidar/front_left/outlier_filtered/pointcloud"/>
      <param name="type" value="sensor_msgs/msg/Pointcloud2"/>
      <param name="reliability" value="best_effort"/>
    </node>

    <group>
      <push-ros-namespace namespace="front_right"/>
      <include file="$(find-pkg-share robobus_sensor_kit_launch)/launch/ouster_fr_launch.py" />
    </group>
    <node pkg="topic_tools" exec="relay" name="lidar_relay_fr" output="log">
      <param name="input_topic" value="/sensing/lidar/front_right/ouster/front_right/points"/>
      <param name="output_topic" value="/sensing/lidar/front_right/outlier_filtered/pointcloud"/>
      <param name="type" value="sensor_msgs/msg/Pointcloud2"/>
      <param name="reliability" value="best_effort"/>
    </node>

    <group>
      <push-ros-namespace namespace="rear_left"/>
      <include file="$(find-pkg-share robobus_sensor_kit_launch)/launch/ouster_rl_launch.py" />
    </group>
    <node pkg="topic_tools" exec="relay" name="lidar_relay_rl" output="log">
      <param name="input_topic" value="/sensing/lidar/rear_left/ouster/rear_left/points"/>
      <param name="output_topic" value="/sensing/lidar/rear_left/outlier_filtered/pointcloud"/>
      <param name="type" value="sensor_msgs/msg/Pointcloud2"/>
      <param name="reliability" value="best_effort"/>
    </node>

    <group>
      <push-ros-namespace namespace="rear_right"/>
      <include file="$(find-pkg-share robobus_sensor_kit_launch)/launch/ouster_rr_launch.py" />
    </group>
    <node pkg="topic_tools" exec="relay" name="lidar_relay_rr" output="log">
      <param name="input_topic" value="/sensing/lidar/rear_right/ouster/rear_right/points"/>
      <param name="output_topic" value="/sensing/lidar/rear_right/outlier_filtered/pointcloud"/>
      <param name="type" value="sensor_msgs/msg/Pointcloud2"/>
      <param name="reliability" value="best_effort"/>
    </node>

    <node pkg="tf2_ros" type="static_transform_publisher" name="static_transform_publisher_fl" args="1.0 2.0 3.0 0.0 0.0 0.0 os_sensor_top os_sensor_fl"/>
    <node pkg="tf2_ros" type="static_transform_publisher" name="static_transform_publisher_fr" args="1.0 2.0 3.0 0.0 0.0 0.0 os_sensor_top os_sensor_fr"/>
    <node pkg="tf2_ros" type="static_transform_publisher" name="static_transform_publisher_rl" args="1.0 2.0 3.0 0.0 0.0 0.0 os_sensor_top os_sensor_rl"/>
    <node pkg="tf2_ros" type="static_transform_publisher" name="static_transform_publisher_rr" args="1.0 2.0 3.0 0.0 0.0 0.0 os_sensor_top os_sensor_rr"/>
    <node pkg="topic_tools" exec="relay" name="lidar_relay_top" output="log">
      <param name="input_topic" value="/sensing/lidar/concatenated/pointcloud_unfilter"/>
      <param name="output_topic" value="/sensing/lidar/top/outlier_filtered/pointcloud"/>
      <param name="type" value="sensor_msgs/msg/Pointcloud2"/>
      <param name="reliability" value="best_effort"/>
    </node>

    <!-- use rs lidar -->
    <!-- <group>
      <push-ros-namespace namespace="top"/>
      <include file="$(find-pkg-share robobus_sensor_kit_launch)/launch/rslidar.py" />
    </group>
    <node pkg="topic_tools" exec="relay" name="lidar_relay" output="log">
      <param name="input_topic" value="/sensing/lidar/top/rslidar_sdk/rs/points"/>
      <param name="output_topic" value="/sensing/lidar/top/outlier_filtered/pointcloud"/>
      <param name="type" value="sensor_msgs/msg/Pointcloud2"/>
      <param name="reliability" value="best_effort"/>
    </node> -->


    <include file="$(find-pkg-share robobus_sensor_kit_launch)/launch/pointcloud_preprocessor.launch.py">
      <arg name="base_frame" value="base_link"/>
      <arg name="use_intra_process" value="true"/>
      <arg name="use_multithread" value="true"/>
      <arg name="use_concat_filter" value="$(var use_concat_filter)"/>
      <arg name="use_pointcloud_container" value="$(var use_pointcloud_container)"/>
      <arg name="container_name" value="$(var pointcloud_container_name)"/>
    </include>
  </group>
</launch>
